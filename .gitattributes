# Track all files in textures folder with Git LFS
textures/** filter=lfs diff=lfs merge=lfs -text
# Also track common texture/image file types anywhere in the repo
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.exr filter=lfs diff=lfs merge=lfs -text
*.dds filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text
*.hdr filter=lfs diff=lfs merge=lfs -text
# Pheromone heatmap data file
data/pheromone_data.json filter=lfs diff=lfs merge=lfs -text
# Goal arrows data file
data/goal_arrows_data.json filter=lfs diff=lfs merge=lfs -text
